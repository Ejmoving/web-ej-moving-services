---
import { Icon } from 'astro-icon';
---

<div id="modal_quote" class="hidden">
    <div class="p-5 fixed inset-0 grid place-items-center z-30">
        <div class="bg-white/70 px-5 py-14  rounded-md text-center relative w-full max-w-xl overflow-hidden border border-zinc-400 shadow-lg backdrop-blur-lg">
            <Icon id="btn_close_modal" class="z-40 w-6 h-6 absolute text-black top-3 right-3 cursor-pointer" name="mdi:window-close" />
            <h1 class="text-2xl mb-14 font-bold text-zinc-900">How would you like to make the quote?</h1>
            <div class="flex justify-evenly flex-row">

                <a href="tel:+1571302-2504" class="text-blue-500 font-bold text-xl">
                    <Icon class="h-8 w-8 inline" name="ic:round-call" />
                    <h3>Call</h3>
                </a>

                <div class="border-r-2 border-r-zinc-500"></div>

                <a href="sms:+1571302-2504" class="text-blue-500 font-bold text-xl">
                    <Icon class="h-8 w-8 inline" name="ic:baseline-message" />
                    <h3>Text</h3>
                </a>

                <div class="border-r-2 border-r-zinc-500"></div>

                <a id="btn_form_Quote" href="#quote" class="text-blue-500 font-bold text-xl">
                    <Icon class="h-8 w-8 inline" name="mdi:web" />
                    <h3>Online</h3>
                </a>

            </div>
        </div>
    </div>
</div>