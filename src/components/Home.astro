---
import Button from './Button.astro';
import Nav from './Nav.astro';
import imgBanner from '/img-banner.svg';
import imgExperience from '/img-experience.svg'
---

<div class="bg-white h-screen overflow-hidden relative">

	<Nav/>
	<main class="absolute z-10 sm:static">
	  <div class="px-6 lg:px-8">
		<div class="mx-auto max-w-3xl pt-32 pb-10 sm:pt-48 sm:pb-40">
			<div class="grid place-items-center text-center">
				<h1 class="text-5xl font-bold sm:text-center text-blue-600 sm:text-6xl">EJ Moving Services</h1>
			  	<h2 class="text-4xl font-bold mt-8 sm:text-center">The best service to protect your assets</h2>
				<p class="mt-6 text-xl leading-8 text-gray-600 sm:text-center">Moving Jobs in Virginia, Maryland and DC</p>
				<div id="btn_modal_quote">
					<Button text_btn="Get a free quote" />
				</div>
			</div>
		</div>
	  </div>

		<div class="hidden xl:block">
			<div class="grid place-items-center">
				<div data-aos="fade-right" data-aos-duration="1000" data-aos-easing="ease-in">
					<img class="w-4/5 max-w-xs m-auto" src={imgExperience} alt="experience ejmoving" loading="lazy">
				</div>
				
				<div class="text-center" data-aos="fade-left" data-aos-duration="1000" data-aos-easing="ease-in">
					<h2 class="text-2xl text-gray-900 font-bold md:text-4xl"><span class="text-4xl text-blue-700">+ 10 years of</span> experience</h2>
				</div>
			</div>
		</div>
	
	</main>

	<img class="absolute right-0 bottom-0 w-[30rem]" src={imgBanner} alt="moving">

</div>