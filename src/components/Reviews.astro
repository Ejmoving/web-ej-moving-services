---
import Button from "./Button.astro";
---

<div id="reviews" class="pt-32 px-2">
    <h2 class="text-2xl text-gray-900 font-bold md:text-4xl text-center m-8">Reviews</h2>
    <div class="swiper mySwiper w-full pb-12 px-4">
        <div id="card_review_user" class="swiper-wrapper">
        </div>
        <div class="swiper-pagination"></div>
    </div>

    <div class="flex justify-center mb-14">
        <div id="btn_leave_review">
            <Button text_btn="Leave Review" />
        </div>
    </div>
</div>